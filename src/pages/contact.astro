---

import Base from '@/templates/Base.astro';
import { AppConfig } from '@/utils/AppConfig';

const { title } = AppConfig;
const { description } = AppConfig;
---

<Base head={{ title, description }}>
  <div class="flex flex-col lg:flex-row">
    <div class="lg:w-1/2 bg-slate-950 py-16 px-16 lg:py-36">
      <div>
        <h2 class="text-pretty text-3xl font-semibold tracking-tight text-zinc-200 sm:text-4xl jura-header">Let's work together</h2>
        <p class="mt-6 text-lg/8 text-zinc-200">Looking for a free consultation about your project? Get in touch with us!</p>
        <p class="my-2 text-lg/8 text-zinc-200">Still not sure if we can help? Check out our <a class="text-sky-300 hover:text-sky-400 cursor-pointer" href="/services/">services</a> or reach out - we'd love to chat.</p>
        <dl class="mt-10 space-y-4 text-base/7 text-zinc-200">
          <div class="flex gap-x-4">
            <dt class="flex-none">
              <span class="sr-only">Address</span>
              <svg class="h-7 w-6 text-zinc-200" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true" data-slot="icon">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 21h19.5m-18-18v18m10.5-18v18m6-13.5V21M6.75 6.75h.75m-.75 3h.75m-.75 3h.75m3-6h.75m-.75 3h.75m-.75 3h.75M6.75 21v-3.375c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21M3 3h12m-.75 4.5H21m-3.75 3.75h.008v.008h-.008v-.008Zm0 3h.008v.008h-.008v-.008Zm0 3h.008v.008h-.008v-.008Z" />
              </svg>
            </dt>
            <dd>
              Briarwood Software<br>
              248 Route 25A<br>
              Suite #3017<br>
              East Setauket, NY 11733
            </dd>
          </div>
          <div class="flex gap-x-4">
            <dt class="flex-none">
              <span class="sr-only">Telephone</span>
              <svg class="h-7 w-6 text-zinc-200" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true" data-slot="icon">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 0 0 2.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 0 1-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 0 0-1.091-.852H4.5A2.25 2.25 0 0 0 2.25 4.5v2.25Z" />
              </svg>
            </dt>
            <dd><a class="hover:text-sky-600" href="tel:+1 (631) 346-6129">+1 (631) 346-6129</a></dd>
          </div>
          <div class="flex gap-x-4">
            <dt class="flex-none">
              <span class="sr-only">Email</span>
              <svg class="h-7 w-6 text-zinc-200" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true" data-slot="icon">
                <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75" />
              </svg>
            </dt>
            <dd><a class="hover:text-sky-600" href="mailto:contact@briarwoodsoftware.com">contact@briarwoodsoftware.com</a></dd>
          </div>
        </dl>
      </div>
    </div>
  
    <form action="#" method="POST" class="lg:w-1/2 bg-zinc-300 py-16 px-16 lg:py-12">
      <div>
        <div class="grid grid-cols-1 gap-x-8 gap-y-6 sm:grid-cols-2">
          <div>
            <label for="first-name" class="block text-sm/6 font-semibold text-slate-950">First name</label>
            <div class="mt-2.5">
              <input
                type="text"
                name="first-name"
                id="first-name"
                autocomplete="given-name"
                class="block w-full rounded-md bg-zinc-100 px-3.5 py-2 text-base text-slate-950 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-zinc-200 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-slate-600"
              >
            </div>
          </div>
          <div>
            <label for="last-name" class="block text-sm/6 font-semibold text-slate-950">Last name</label>
            <div class="mt-2.5">
              <input
                type="text"
                name="last-name"
                id="last-name"
                autocomplete="family-name"
                class="block w-full rounded-md bg-zinc-100 px-3.5 py-2 text-base text-slate-950 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-zinc-200 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-slate-600"
              >
            </div>
          </div>
  
          <div class="sm:col-span-2">
            <label for="email" class="block text-sm/6 font-semibold text-slate-950">Email</label>
            <div class="mt-2.5">
              <input
                type="email"
                name="email"
                id="email"
                autocomplete="email"
                class="block w-full rounded-md bg-zinc-100 px-3.5 py-2 text-base text-slate-950 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-zinc-200 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-slate-600"
              >
            </div>
          </div>
  
          <div class="sm:col-span-2">
            <label for="phone-number" class="block text-sm/6 font-semibold text-slate-950">Phone number</label>
            <div class="mt-2.5">
              <input
                type="tel"
                name="phone-number"
                id="phone-number"
                autocomplete="tel"
                class="block w-full rounded-md bg-zinc-100 px-3.5 py-2 text-base text-slate-950 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-zinc-200 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-slate-600"
              >
            </div>
          </div>
  
          <!-- New Project Type dropdown -->
          <div class="sm:col-span-2">
            <label for="project-type" class="block text-sm/6 font-semibold text-slate-950">Project Type</label>
            <div class="mt-2.5">
              <select
                name="project-type"
                id="project-type"
                class="block w-full rounded-md bg-zinc-100 px-3.5 py-2 text-base text-slate-950 outline outline-1 -outline-offset-1 outline-gray-300 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-slate-600"
              >
                <option value="">Select</option>
                <option>Tech Strategy Consulting</option>
                <option>Custom Website</option>
                <option>Custom Software</option>
                <option>Branding/SEO</option>
                <option>E-Commerce</option>
                <option>Support</option>
                <option>Other</option>
              </select>
            </div>
          </div>
  
          <!-- New Project Budget dropdown -->
          <div class="sm:col-span-2">
            <label for="project-budget" class="block text-sm/6 font-semibold text-slate-950">Project Budget</label>
            <div class="mt-2.5">
              <select
                name="project-budget"
                id="project-budget"
                class="block w-full rounded-md bg-zinc-100 px-3.5 py-2 text-base text-slate-950 outline outline-1 -outline-offset-1 outline-gray-300 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-slate-600"
              >
                <option value="">Select</option>
                <option value="2000-5000">I want a free, no-risk consultation</option>
                <option value="2000-5000">$1,000 - $5,000</option>
                <option value="5000-10000">$5,000 - $10,000</option>
                <option value="10000-20000">$10,000 - $20,000</option>
                <option value="10000-20000">$20,000+</option>
              </select>
            </div>
          </div>
  
          <div class="sm:col-span-2">
            <label for="message" class="block text-sm/6 font-semibold text-slate-950">Message</label>
            <div class="mt-2.5">
              <textarea
                name="message"
                id="message"
                rows="4"
                class="block w-full rounded-md bg-zinc-100 px-3.5 py-2 text-base text-slate-950 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-zinc-200 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-slate-600"
              ></textarea>
            </div>
          </div>
        </div>
        <div class="mt-6 flex justify-end">
          <button
            type="submit"
            class="rounded-md bg-emerald-500 px-3.5 py-2.5 text-center text-sm font-semibold text-zinc-100 shadow-sm hover:bg-sky-500"
          >
            Send message
          </button>
        </div>
        <div class="text-slate-800 text-sm text-center mt-10">By contacting us, you agree to our <a class="font-semibold text-sky-500 hover:text-sky-600" href="/privacy/">privacy policy</a></div>
      </div>
    </form>
  </div>
  

  
</Base>
